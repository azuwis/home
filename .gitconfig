[user]
        email = azuwis@gmail.com
        name = Zhong Jianxin
[color]
        ui = auto
[alias]
        co = checkout
        st = status
        di = diff
        ci = commit
        br = branch
        mt = mergetool
        sta = stash
        lg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset%Cblue(%an)%Creset' --abbrev-commit --date=relative
[core]
        pager = less
        autocrlf = input
[url "git@github.com:"]
        pushInsteadOf = git://github.com/
[push]
        default = simple
[filter "strippriv"]
        clean = perl -lpe 's/^(PRIV_.*)=(.*)/$1=CHANGEME/'
[rerere]
        enabled = true
        autoupdate = true
